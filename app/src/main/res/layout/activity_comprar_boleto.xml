<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="416dp"
        android:layout_height="100dp"
        android:gravity="top"
        tools:ignore="MissingConstraints">


        <TableRow
            style="@style/rowForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="182dp"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/logog" />

        </TableRow>

        <TableRow
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.3"
                android:text="Realizar orden"
                android:textSize="22sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>


    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="26dp"
        android:paddingTop="130dp"
        android:paddingRight="26dp">


        <ImageView
            android:id="@+id/imageServici"
            android:layout_width="192dp"
            android:layout_height="150dp"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/nombreServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:letterSpacing="0.3"
            android:paddingTop="20dp"
            android:paddingBottom="8dp"
            android:text="Realizar pedido"
            android:textColor="#040404"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categoriaServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:paddingBottom="40dp"
            android:text="Realizar pedido"
            android:textColor="#040404"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/descripcionServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:lineSpacingExtra="10sp"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:text="Realizar pedido"
            android:textColor="#040404"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/preSer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:lineSpacingExtra="10sp"
            android:paddingTop="14dp"
            android:text="Realizar pedido"
            android:textColor="#335754"
            android:textStyle="bold"
            android:textSize="16sp" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_continuar"
                android:layout_width="339dp"
                android:layout_height="59dp"
                android:layout_column="0"
                android:backgroundTint="#538A97"
                android:gravity="center"
                android:onClick="login"
                android:text="Solicitar"
                android:textColor="#FFFFFF"/>
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/calificacionServicio"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:background="@drawable/stars"
        android:paddingTop="4dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>