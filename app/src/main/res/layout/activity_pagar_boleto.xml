<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="416dp"
        android:layout_height="100dp"
        android:gravity="top"
        tools:ignore="MissingConstraints">


        <TableRow
            style="@style/rowForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="182dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/logog" />

        </TableRow>

        <TableRow
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:gravity="center">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.3"
                android:text="PAGAR PEDIDO "
                android:drawableRight="@drawable/ic_credit_card"
                android:textSize="22sp"
                android:textStyle="bold" />


        </TableRow>

    </TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.738">

        <TableRow
            style="@style/rowForm"
            android:paddingTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <EditText
                android:id="@+id/id2"
                android:layout_width="311dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="20dp"
                android:hint="Nombre del titular"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingLeft="20dp" />
        </TableRow>


        <TableRow
            style="@style/rowForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/id1"
                android:layout_width="311dp"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ms"
                android:background="@drawable/custom_input"
                android:drawablePadding="20dp"
                android:hint="NÃºmero de tarjeta"
                android:importantForAutofill="no"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:textColorHighlight="#199fcd"
                android:textColorLink="#199fcd" />
        </TableRow>

        <TableRow
            style="@style/rowForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/id3"
                android:layout_width="311dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="20dp"
                android:hint="CVV"
                android:importantForAutofill="no"
                android:inputType="numberPassword"
                android:paddingLeft="20dp"
                android:textColorHighlight="#199fcd"
                android:textColorLink="#199fcd" />
        </TableRow>

        <TableRow
            style="@style/rowForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/id4"
                android:layout_width="311dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="20dp"
                android:hint="Fecha de vencimiento"
                android:importantForAutofill="no"
                android:inputType="date"
                android:paddingLeft="20dp"
                android:textColorHighlight="#199fcd"
                android:textColorLink="#199fcd" />
        </TableRow>

        <TableRow
            style="@style/rowForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp">

          <TextView
              android:id="@+id/precio"
              android:text=""
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_pagar"
                android:layout_width="339dp"
                android:layout_height="59dp"
                android:layout_column="0"
                android:backgroundTint="#538A97"
                android:gravity="center"
                android:text="Finalizar orden"
                android:onClick="addReserva"
                android:textColor="#FFFFFF"
                tools:ignore="OnClick" />

        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>