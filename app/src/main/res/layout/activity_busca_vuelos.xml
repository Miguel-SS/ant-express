<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    tools:context=".BuscaVuelos">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="416dp"
        android:layout_height="100dp"
        android:gravity="top"
        tools:ignore="MissingConstraints">


        <TableRow
            style="@style/rowForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="182dp"
                android:layout_height="42dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/logo" />

        </TableRow>

        <TableRow
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.3"
                android:text="BUSCA TU VUELO"
                android:textSize="22sp"
                android:textStyle="bold" />


        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="357dp"
        android:layout_height="494dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_cuadro"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557">


        <TableRow
            style="@style/rowForm"
            android:layout_width="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_height="match_parent">


            <RadioGroup
                android:layout_width="360dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:paddingLeft="24dp">

                <RadioButton
                    android:id="@+id/vuelta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:paddingRight="70dp"
                    android:text="Ida y vuelta" />

                <RadioButton
                    android:id="@+id/ida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:text="Solo ida" />
            </RadioGroup>


        </TableRow>

        <TableRow
            style="@style/rowForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/Ruta"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:importantForAutofill="no"
                android:text="Ruta"
                android:textSize="18sp"
                android:textStyle="bold" />

        </TableRow>


        <Spinner
            android:id="@+id/id_spin_rutas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_span="2"
            android:fontFamily="@font/montserrat" />


        <TextView
            android:id="@+id/Pasajeros"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:importantForAutofill="no"
            android:text="Pasajeros"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
          android:layout_marginBottom="18dp"
            android:layout_marginLeft="16dp"

            android:textStyle="bold" />

        <Spinner
            android:id="@+id/cantPasajeros"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="13dp"
            android:layout_span="2"
            android:fontFamily="@font/montserrat" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-30dp"
            android:gravity="center"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                android:layout_marginRight="20dp"
                android:text="            Fecha de salida"
                android:textSize="18sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:paddingTop="8dp"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:inputType="date" />
        </TableRow>


        <TableRow
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/btn_registrarse"
                android:width="30dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:backgroundTint="#199fcd"
                android:gravity="center"
                android:onClick="buscar"
                android:text="Buscar"
                android:textColor="#FFFFFF" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="411dp"
        android:layout_height="65dp"
        android:background="@color/colorBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <TableRow>

            <Button
                android:id="@+id/vuelos"
                android:layout_width="138dp"
                android:layout_height="78dp"
                android:layout_column="0"
                android:backgroundTint="@color/colorBar"
                android:drawableTop="@drawable/ic_flight"
                android:gravity="center"
                android:onClick="buscar"
                android:text="Home"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/checkin"
                android:layout_width="138dp"
                android:layout_height="78dp"
                android:layout_column="2"
                android:backgroundTint="#199fcd"
                android:drawableTop="@drawable/ic_seat"
                android:gravity="center"
                android:text="Explore"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/misreservas"
                android:layout_width="138dp"
                android:layout_height="78dp"
                android:layout_column="1"
                android:backgroundTint="@color/colorBar"
                android:drawableTop="@drawable/ic_bag"
                android:gravity="center"
                android:text="Mis Ã³rdenes"
                android:textColor="#FFFFFF" />



        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>