<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light"
        android:visibility="gone">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/ic_delete_sweep_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="Eliminar"
            android:textColor="#fff"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_background_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_light"
        android:visibility="gone">

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="296dp"
            android:src="@drawable/ic_edit_24" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="333dp"
            android:layout_marginRight="293dp"
            android:layout_toLeftOf="@id/edit_icon"
            android:text="Editar"
            android:textColor="#fff"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="19dp">

        <ImageView
            android:id="@+id/service_icon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:letterSpacing="0.1"
            android:maxLines="1"
            android:text="Ruta"
            android:textColor="@android:color/background_dark"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_below="@+id/service_icon"/>

        <TextView
            android:id="@+id/precioVuelo"
            android:layout_width="52dp"
            android:layout_height="37dp"
            android:layout_below="@+id/service_icon"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/circle"
            android:fontFamily="@font/montserrat"
            android:paddingTop="9dp"
            android:letterSpacing="0.1"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="42dp"
            android:layout_below="@+id/titleName"
            android:layout_marginTop="-4dp"
            android:contentDescription="@string/img_cambiarclave"
            android:paddingLeft="8dp"
            android:src="@drawable/tt" />

        <TextView
            android:id="@+id/titleAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleName"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="5.5dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="Duracion"
            android:textColor="@android:color/darker_gray"
            android:textSize="15dp" />

<!--
        <TextView
            android:id="@+id/titlePosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleName"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@id/titleAddress"
            android:fontFamily="@font/montserrat"
            android:letterSpacing="0.15"
            android:text="Avion"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"
            android:textColorLink="@color/colorIcons"
            android:textSize="12dp"
            android:textStyle="bold" />

-->
    </RelativeLayout>



</FrameLayout>